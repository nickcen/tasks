- task = @task.decorate

p#notice = notice

p
  strong Name:
  = task.show_name

p
  strong State:
  = task.show_state

p
  strong User:
  = task.user.show_name

.panel.panel-primary
  .panel-heading
    .panel-title
      | Applies

  table.table.table-striped
    tr
      th User
      th Date
      th State
      th 
    = render :partial => 'tasks/applies/apply', :collection => task.applies

= task.apply_link
= task.cancel_link
= task.edit_link